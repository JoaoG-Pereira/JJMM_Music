<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/american-idiot-green-day2.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Conhece de Green Day? Escute American Idiot agora! :)
                <p>
                    <a asp-area="" asp-controller="Albuns" asp-action="Index" class="btn btn-default">
                        Ver músicas
                    </a>
                </p>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/views.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Hotline Bling e o álbum Views de Drake agora no JJMM Music
                <p>
                    <a asp-area="" asp-controller="Albuns" asp-action="Index" class="btn btn-default">
                        Ver músicas
                    </a>
                </p>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Orchestra5.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Prefere os clássicos? Conheça nosso acervo de composições clássicas
                <p>
                    <a class="btn btn-default" asp-area="" asp-controller="Musicas" asp-action="Index">
                       Ver músicas
                    </a>
                </p>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

