@model JJMM_Music.Models.Banda

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Banda</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome da banda
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NomeBanda)
        </dd>
        <dt>
            Gênero
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdGeneroNavigation.IdGenero)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdBanda" />
        <input type="submit" value="Cancelar" class="btn btn-default" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
