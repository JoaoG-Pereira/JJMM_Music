@model JJMM_Music.Models.Genero

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Genero</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Gênero
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NomeGenero)
        </dd>
        <dt>
            Descrição
        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdGenero" />
        <input type="submit" value="Deletar" class="btn btn-default" /> |
        <a asp-action="Index">Cancelar</a>
    </form>
</div>
